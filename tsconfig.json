{
	"compilerOptions": {
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"module": "ES2022",
		"target": "ES2023",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"declarationDir": "types",
		"declaration": true
	},
	"include": ["src/**/*.js", "src/**/*.d.ts"],
	"exclude": ["node_modules"]
}
